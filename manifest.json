{
  "manifest_version": 3,
  "name": "NVCC Major Course Checker",
  "version": "1.0",
  "description": "Shows course equivalencies for selected majors on www.nvcc.edu",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.nvcc.edu/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/checkmark.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nvcc.edu/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
